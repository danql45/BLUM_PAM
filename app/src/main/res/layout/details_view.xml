<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_margin="10dp"
    android:elevation="5dp"
    android:background="@drawable/rounded_rect"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/productURL"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_margin="5dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/artNo"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/distance"
        android:text="test2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/height"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/colour"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fixingMethod"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/doorType"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/openingAngle"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/productSystem"
        android:text="test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cabinetHeight"
        android:text="test22"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cabinetMinDepth"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/powerFactorLF"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</LinearLayout>